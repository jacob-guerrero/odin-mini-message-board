<html>
  <body>
    <h2>Message info</h2>

    <h3><%= message.user %></h3>
    <p><%= message.text %></p>
    <p><%= message.added %></p>

    <a href="/messages/<%= message.id %>/edit">Edit</a>
    <form action="/messages/<%= message.id %>/delete" method="POST">
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this message?')"
      >
        Delete
      </button>
    </form>

    <a href="/">Back</a>
  </body>
</html>
